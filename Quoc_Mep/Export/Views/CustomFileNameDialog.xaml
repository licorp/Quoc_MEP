<Window x:Class="Quoc_MEP.Export.Views.CustomFileNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Custom File Name"
        Width="900" Height="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="White"
        ShowInTaskbar="False">

    <Window.Resources>
        <!-- Button Styles -->
        <Style x:Key="ControlButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D0D0D0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ListBox Style -->
        <Style x:Key="ParameterListBoxStyle" TargetType="ListBox">
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="SelectionMode" Value="Single"/>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <!-- Main Grid with Title Bar -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Border Grid.Row="0" 
                Background="#F8F8F8" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,0,1"
                Height="35"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Grid.Column="0" 
                          Text="Custom File Name" 
                          FontWeight="SemiBold"
                          FontSize="13"
                          VerticalAlignment="Center"
                          Margin="15,0,0,0"/>

                <!-- Minimize Button -->
                <Button Grid.Column="1" 
                       Content="â€”" 
                       Style="{StaticResource ControlButtonStyle}"
                       Width="25" Height="25"
                       Margin="0,0,5,0"
                       Click="MinimizeButton_Click"/>

                <!-- Close Button -->
                <Button Grid.Column="2" 
                       Content="âœ•" 
                       Style="{StaticResource ControlButtonStyle}"
                       Width="25" Height="25"
                       Margin="0,0,10,0"
                       Click="CloseButton_Click"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Available Parameters -->
            <GroupBox Grid.Column="0" 
                     Header="Available Parameters" 
                     Margin="0,0,10,0"
                     BorderBrush="#CCCCCC"
                     BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Category Filter -->
                    <TextBlock Grid.Row="0" 
                              Text="All" 
                              FontWeight="SemiBold"
                              Margin="0,0,0,5"/>
                    
                    <!-- Search Filter -->
                    <Grid Grid.Row="1" Margin="0,0,0,10">
                        <TextBox Name="SearchParametersTextBox"
                                Style="{StaticResource SearchTextBoxStyle}"
                                TextChanged="SearchParameters_TextChanged"/>
                        <TextBlock Text="ðŸ” Search parameters..."
                                  Margin="7,3,0,0"
                                  VerticalAlignment="Center"
                                  Foreground="#999999"
                                  IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=SearchParametersTextBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <!-- Parameters List -->
                    <ListBox Grid.Row="2" 
                            Name="AvailableParametersListBox"
                            Style="{StaticResource ParameterListBoxStyle}"
                            ItemsSource="{Binding AvailableParameters}"
                            SelectedItem="{Binding SelectedAvailableParameter}"
                            MouseDoubleClick="AvailableParametersListBox_MouseDoubleClick">
                        
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" Margin="5,3">
                                    <TextBlock Text="{Binding Name}" 
                                              FontSize="12"
                                              FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Category}" 
                                              FontSize="10"
                                              Foreground="#666666"
                                              Margin="0,2,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </GroupBox>

            <!-- Right Panel - Parameter Configuration -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Parameter Details Table -->
                <GroupBox Grid.Row="0" 
                         Header="Selected Parameters Configuration"
                         BorderBrush="#CCCCCC"
                         BorderThickness="1">
                    <DataGrid Name="ParametersDataGrid"
                             AutoGenerateColumns="False"
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             GridLinesVisibility="Horizontal"
                             HeadersVisibility="Column"
                             SelectionMode="Single"
                             ItemsSource="{Binding SelectedParameters}"
                             BorderBrush="#CCCCCC"
                             BorderThickness="1">
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Parameter Name" 
                                               Binding="{Binding ParameterName}"
                                               Width="*"
                                               IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="Prefix" 
                                               Binding="{Binding Prefix, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                               Width="80"/>
                            
                            <DataGridTextColumn Header="Sample Value" 
                                               Binding="{Binding SampleValue}"
                                               Width="120"
                                               IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#0078D4"/>
                                        <Setter Property="FontStyle" Value="Italic"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="Suffix" 
                                               Binding="{Binding Suffix, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                               Width="80"/>
                            
                            <DataGridTextColumn Header="Separator" 
                                               Binding="{Binding Separator, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                               Width="80"/>
                        </DataGrid.Columns>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Height" Value="32"/>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>
                </GroupBox>

                <!-- Control Buttons -->
                <StackPanel Grid.Row="1" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Margin="0,10">
                    
                    <!-- Move Up -->
                    <Button Style="{StaticResource ControlButtonStyle}"
                           Click="MoveUp_Click"
                           ToolTip="Move parameter up">
                        <Path Data="M 8,12 L 12,8 L 16,12" 
                              Stroke="#0078D4" 
                              StrokeThickness="2"/>
                    </Button>

                    <!-- Move Down -->
                    <Button Style="{StaticResource ControlButtonStyle}"
                           Click="MoveDown_Click"
                           ToolTip="Move parameter down">
                        <Path Data="M 8,8 L 12,12 L 16,8" 
                              Stroke="#0078D4" 
                              StrokeThickness="2"/>
                    </Button>

                    <!-- Add Parameter -->
                    <Button Style="{StaticResource ControlButtonStyle}"
                           Click="AddParameter_Click"
                           ToolTip="Add selected parameter">
                        <Path Data="M 12,8 L 12,16 M 8,12 L 16,12" 
                              Stroke="Green" 
                              StrokeThickness="2"/>
                    </Button>

                    <!-- Remove Parameter -->
                    <Button Style="{StaticResource ControlButtonStyle}"
                           Click="RemoveParameter_Click"
                           ToolTip="Remove selected parameter">
                        <Path Data="M 8,8 L 16,16 M 8,16 L 16,8" 
                              Stroke="Red" 
                              StrokeThickness="2"/>
                    </Button>

                    <!-- Refresh -->
                    <Button Style="{StaticResource ControlButtonStyle}"
                           Click="Refresh_Click"
                           ToolTip="Refresh parameters list">
                        <Path Data="M12,8 A4,4 0 1,1 8,12 M12,8 L10,6 M12,8 L14,10" 
                              Stroke="#0078D4" 
                              StrokeThickness="1.5"/>
                    </Button>
                </StackPanel>

                <!-- Preview -->
                <GroupBox Grid.Row="2" 
                         Header="Custom Name Preview:" 
                         Margin="0,10,0,10"
                         BorderBrush="#CCCCCC"
                         BorderThickness="1">
                    <Border Background="#F8F8F8"
                           BorderBrush="#CCCCCC"
                           BorderThickness="1"
                           CornerRadius="2"
                           Padding="10">
                        <TextBlock Name="PreviewTextBlock" 
                                  Text="{Binding PreviewText}"
                                  FontFamily="Consolas"
                                  FontSize="12"
                                  TextWrapping="Wrap"
                                  Foreground="#0078D4"/>
                    </Border>
                </GroupBox>

                <!-- OK/Cancel Buttons -->
                <StackPanel Grid.Row="3" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Right">
                    <Button Content="Cancel" 
                           Width="80"
                           Style="{StaticResource ActionButtonStyle}"
                           Margin="0,0,10,0"
                           Background="White"
                           BorderBrush="#CCCCCC"
                           Click="CancelButton_Click"/>
                    <Button Content="OK" 
                           Width="80"
                           Style="{StaticResource ActionButtonStyle}"
                           Background="#0078D4"
                           Foreground="White"
                           BorderBrush="#0078D4"
                           Click="OkButton_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
