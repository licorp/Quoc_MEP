<Window x:Class="Quoc_MEP.SplitDuct.SplitDuctWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quoc_MEP.SplitDuct"
             mc:Ignorable="d" 
        Width="320"
        Height="180"
        Title="Split Duct"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="True"
        ResizeMode="NoResize">
    <Grid>
        <GroupBox Width="300" Height="94" Header="Setting" Margin="0,5,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" BorderBrush="Gray">
            <StackPanel Margin="5 5 0 0" HorizontalAlignment="Left" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Options:" Width="100"/>
                    <ComboBox x:Name="cbbOptions" Width="180"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                    <Label Content="Distance (mm):" Width="100"/>
                    <TextBox x:Name="tbDistance" Width="180" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>


        <StackPanel Orientation="Horizontal" Height="25" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 0 5 5">
            <Button x:Name="btOk" Width="80" Content="OK" Margin="0 0 5 0" Click="btOk_Click"/>
            <Button x:Name="btCancel" Width="80" Content="Cancel" Click="btCancel_Click"/>
        </StackPanel>

    </Grid>
</Window>
